@if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Any())
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3>Atenção!</h3>
        @Html.ValidationSummary(true)
    </div>
}
else
{
    var erro = TempData["ErroMessage"] != null ? TempData["ErroMessage"].ToString() : "";

    if (!string.IsNullOrEmpty(erro))
    {
        TempData["ErroMessage"] = null;

        <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <h3>@erro</h3>
        </div>
    }
}

@if (!string.IsNullOrEmpty(ViewBag.Sucesso))
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <h3>@ViewBag.Sucesso</h3>
    </div>
}
else
{
    var success = TempData["SuccessMessage"] != null ? TempData["SuccessMessage"].ToString() : "";

    if (!string.IsNullOrEmpty(success))
    {
        TempData["SuccessMessage"] = null;

        <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">x</button>
            <h3>@ViewBag.Sucesso</h3>
        </div>
    }
}